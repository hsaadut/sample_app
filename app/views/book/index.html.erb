<h1>Listing Books</h1>

<table width ="1000" border ="2">
    <thead>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Comments</th>
    </tr>    
    </thead>    


    <tbody>
        <% @books.each do |book| %> 
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author  %></td>
            <td><%= link_to 'Comment', 
        { :controller => "comments", :action => "new", :book_id => book.id } %></td>
        </tr>
        <% end %>
    </tbody>
</table>




